<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_background" />
            <corners android:radius="5dp" />
            <stroke android:color="@color/btn_background" android:width="2dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape android:shape="rectangle" >
            <solid android:color="@color/btn_background_selected" />
            <corners android:radius="5dp" />
            <stroke android:color="@color/btn_background_selected" android:width="1dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" >

            <solid android:color="@color/btn_background" />
            <corners android:radius="5dp"
                />
            <stroke android:color="@color/btn_background" android:width="1dp" />
        </shape>
    </item>
</selector>